<section id="main">
  <div class="container">
    <header>
      <h2>Meus projetos ({{ projects.length }})</h2>
      <div class="addon">
        <form action="/app/projects/create" method="post">
          <input type="text" name="name" placeholder="Novo projeto">
          <button type="submit" class="btn">
            <img src="/img/plus.svg">
          </button>
        </form>
      </div>
    </header>

    <section id="content">
      <div class="project-list">
        {% for project in projects %}
          <a href="/app/{{ id_usuario }}/projects/{{ project.id }}">{{ project.title }}</a>
        {% endfor %}
      </div>
    </section>
  </div>
</section>
